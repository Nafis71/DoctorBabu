<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9 "
    android:fitsSystemWindows="true"
    android:animationCache="true"
    tools:context=".patient.HomeModules.Home">
    <RelativeLayout
        android:id="@+id/noInternetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/noInternetImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nointernet">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noInternetImage"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Oops! we couldn't connect to the server, check your connection"
            android:textSize="13sp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="-8dp"
            android:layout_marginEnd="-8dp"
            android:background="#ffff"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/doctorBabuLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitStart"
                android:src="@drawable/doctorbabulogo" />

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="-50dp"
                android:layout_toEndOf="@+id/doctorBabuLogo"
                android:fontFamily="@font/roboto"
                android:shadowColor="@color/black"
                android:shadowRadius="0.5"
                android:text="Doctor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/headerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/headerText"
                android:fontFamily="@font/roboto"
                android:shadowColor="@color/black"
                android:shadowRadius="0.5"
                android:text="Babu"
                android:textColor="#4E5EDE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/languageImage"
                android:fontFamily="@font/roboto"
                android:text="@string/languageName"
                android:textSize="12sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/languageImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@+id/headerText2"
                android:src="@drawable/languages" />

            <ImageView
                android:id="@+id/toolBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/navigationdrawericon">

            </ImageView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cart"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:layout_toStartOf="@+id/toolBar"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/cartCounter"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/badge_background"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:textStyle="bold"
                        android:elevation="1dp"
                        android:textSize="13sp"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/cart">

                    </ImageView>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sliderCard"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:padding="5sp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/white">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="900"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="900"
                        app:sliderIndicatorEnabled="true"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />
                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/welcomeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sliderCard"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:animateLayoutChanges="true"
                    android:background="#fff"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/welcomeHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/profilePicture"
                        android:fontFamily="@font/roboto"
                        android:shadowColor="@color/black"
                        android:shadowRadius="0.2"
                        android:text="Welcome"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/welcomeHeader"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@id/profilePicture"
                        android:fontFamily="@font/roboto"
                        android:text=""
                        android:textAlignment="textStart"
                        android:textSize="13sp"
                        android:textStyle="normal">

                    </TextView>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="invisible"
                        app:layout_constraintDimensionRatio="1:1"
                        app:shapeAppearanceOverlay="@style/circular"
                        app:srcCompat="@drawable/profile_picture"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/appointmentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcomeSection"
                    android:layout_marginStart="0sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="0sp"
                    android:animateLayoutChanges="true"
                    app:strokeColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_cacheComposition="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/doctorappointment"
                            app:lottie_renderMode="hardware" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-20dp"
                            android:fontFamily="@font/roboto"
                            android:shadowColor="@color/black"
                            android:text="@string/bookAppointment"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto"
                            android:padding="5dp"
                            android:text="@string/bookAppointmentDescription"
                            android:textAlignment="center"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/consultantCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appointmentCard"
                    android:layout_marginStart="0sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="0sp"
                    app:strokeColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_cacheComposition="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/consultation"
                            app:lottie_renderMode="hardware" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto"
                            android:shadowColor="@color/black"
                            android:text="@string/takeConsultancy"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto"
                            android:padding="5dp"
                            android:text="@string/takeConsultancyDescription"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/medicineReminderCard"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/consultantCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="85dp"
                            android:layout_below="@+id/medicineReminderDescription"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pillremind" />

                        <TextView
                            android:id="@+id/medicineRemindText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/medicalReminder"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/medicineReminderDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/medicineRemindText"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="9dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/medicalReminderDescription"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reportCard"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medicineReminderCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/medicalReportDescription"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/report" />

                        <TextView
                            android:id="@+id/reportText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/medicalReport"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/medicalReportDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/reportText"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="8.5dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/medicalReportDescription"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pendingAppointment"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reportCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/appointmentHistoryDescription"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/appointmenthistory" />

                        <TextView
                            android:id="@+id/apointmentHistoryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/pendingAppointment"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/appointmentHistoryDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/apointmentHistoryText"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="8.5dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/pendingAppointmentDescription"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/apointmentHistoryText"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:layout_toEndOf="@+id/appointmentHistoryDescription"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/onlineCosultantCard"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/consultantCard"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/medicineReminderCard"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="173dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/doctor1" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:layout_below="@id/onlineText"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="-35dp"
                            android:layout_marginTop="50dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/doctor3" />


                        <TextView
                            android:id="@+id/doctorText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/onlineConsultant"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/onlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/doctorText"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/onlineConsultantDescription"
                            android:textColor="#666666"
                            android:textSize="12sp">

                        </TextView>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="32dp"
                            android:layout_toEndOf="@+id/onlineText"
                            android:src="@drawable/greendot" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/medicineCard"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/onlineCosultantCard"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/reportCard"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/medicineInformationDescription"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/medicinepicture" />

                        <TextView
                            android:id="@+id/medicineText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/medicinePurchase"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/medicineInformationDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/medicineText"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="9dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/medicinePurchaseDescription"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/hospitalListCard"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medicineCard"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/reportCard"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/hospitalListDescription"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/circular"
                            android:src="@drawable/emergency_ward_full_1200x675" />

                        <TextView
                            android:id="@+id/hospitalListText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/hospitalListHeader"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/hospitalListDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hospitalListText"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="9dp"
                            android:fontFamily="@font/roboto"
                            android:padding="2dp"
                            android:text="@string/hospitalListDescription"
                            android:textColor="#666666"
                            android:textSize="12sp"

                            >

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:itemTextColor="#5D6D7E"
        app:itemIconSize="22dp"
        app:itemIconTint="#FF7681D6"
        app:itemRippleColor="#F2F3F4"
        android:padding="5dp"
        app:menu="@menu/nav_drawer_home">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>