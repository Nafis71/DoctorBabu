<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/doctor_appointment_background_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/medicinePicture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop">

        </ImageView>

        <TextView
            android:id="@+id/medicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/medicinePicture"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/medicineDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineName"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/medicinePicture"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:textSize="12sp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/medicineBrandName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineDosage"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/medicinePicture"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:textSize="12sp"
            android:textStyle="normal">

        </TextView>
        <TextView
            android:id="@+id/orderDate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineBrandName"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/medicinePicture"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/medicinePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:text="222222"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/medicinePrice"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:text="Qty - 123"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/trackOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/quantity"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:text="Processing"
            android:textColor="@color/dark_red"
            android:textSize="12sp"
            android:textStyle="bold|italic">

        </TextView>
    </RelativeLayout>
</RelativeLayout>