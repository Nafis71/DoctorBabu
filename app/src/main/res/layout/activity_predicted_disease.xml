<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".patient.predictedDisease">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/roboto"
        android:shadowColor="@color/black"
        android:shadowRadius="0.5"
        android:text="Diagnose"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="3sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/headerText"
        android:fontFamily="@font/roboto"
        android:shadowColor="@color/black"
        android:shadowRadius="0.5"
        android:text="Symptoms"
        android:textColor="#4E5EDE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/diseaseAnimation"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                app:lottie_autoPlay="true"
                app:lottie_cacheComposition="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/disease"
                app:lottie_renderMode="hardware"
                app:lottie_speed="0.5">

            </com.airbnb.lottie.LottieAnimationView>

            <RelativeLayout
                android:id="@+id/diseaseResultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diseaseAnimation">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="20sp"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="#EDF6FD"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp">

                        <ImageView
                            android:id="@+id/infoImage"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8sp"
                            android:src="@drawable/info">

                        </ImageView>

                        <TextView
                            android:id="@+id/identifiedDiseaseHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@id/infoImage"
                            android:fontFamily="@font/roboto"
                            android:justificationMode="inter_word"
                            android:text="Identified Disease: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/identifiedDisease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@id/identifiedDiseaseHeader"
                            android:fontFamily="@font/roboto"
                            android:justificationMode="inter_word"
                            android:shadowColor="@color/black"
                            android:shadowRadius="0.2"
                            android:text="Fungal Infection"
                            android:textColor="@color/dark_red"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/diseaseinfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diseaseResultCard">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="20sp"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="#EDF6FD"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <RelativeLayout
                        android:id="@+id/diseaseinfoFirstSection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp">

                        <ImageView
                            android:id="@+id/diseaseinfoImage"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="8sp"
                            android:layout_marginTop="5sp"
                            android:src="@drawable/diseaseinfo">

                        </ImageView>

                        <TextView
                            android:id="@+id/diseaseInfoFirstText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="7sp"
                            android:layout_marginEnd="2sp"
                            android:layout_toEndOf="@id/diseaseinfoImage"
                            android:fontFamily="@font/roboto"
                            android:justificationMode="inter_word"
                            android:text="Overview of "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/diseaseInfoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0sp"
                            android:layout_marginTop="7sp"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@id/diseaseInfoFirstText"
                            android:fontFamily="@font/roboto"
                            android:justificationMode="inter_word"
                            android:text="Fungal Infection"
                            android:textColor="@color/blue"
                            android:textSize="16sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/diseaseInfoTextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/diseaseinfoImage"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginBottom="8sp"
                            android:fontFamily="@font/roboto"
                            android:justificationMode="inter_word"
                            android:text="Fungal Infections (Mycosis) Fungal infections are any disease or condition you get from a fungus. They usually affect your skin, hair, nails or mucous membranes but they can also infect your lungs or other parts of your body. You're at higher risk for fungal infections if you have a weakened immune system.
"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal">

                        </TextView>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/moreInfo"
                            android:layout_width="103dp"
                            android:layout_height="39dp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginEnd="28sp"
                            android:layout_marginBottom="10sp"
                            android:layout_below="@+id/diseaseInfoTextBody"
                            android:background="@drawable/custom_button_back"
                            android:fontFamily="@font/roboto"
                            android:shadowColor="@color/black"
                            android:shadowRadius="0.5"
                            android:text="More\u2060Info"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="#3C4DD8"
                            app:cornerRadius="12dp"
                            app:elevation="500dp"
                            app:strokeColor="@color/white"
                            tools:ignore="NotSibling" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>