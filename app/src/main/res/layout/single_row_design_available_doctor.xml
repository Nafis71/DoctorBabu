<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F9F9"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="-40dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/green_shade_1"
                app:cardCornerRadius="14dp">

                <TextView
                    android:id="@+id/onlineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="2.8dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:text="@string/onlineStatus"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp">

                </TextView>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/profilePictureCard"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="fitCenter"
                        android:elevation="2dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:shapeAppearanceOverlay="@style/RoundedSquare">

                    </com.google.android.material.imageview.ShapeableImageView>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="Tonmoy"
                android:textColor="@color/black"
                android:textSize="12.5sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/doctorDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorName"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="Medical officer"
                android:textColor="#666666"
                android:textSize="11.5sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/ratingStar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/profilePictureCard"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/star">

            </ImageView>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePictureCard"
                android:layout_marginStart="3dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/ratingStar"
                android:fontFamily="@font/roboto"
                android:text="4.6"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/doctorSpecialties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorDegree"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="General Physician"
                android:textColor="#4F5FDE"
                android:textSize="11.5sp">

            </TextView>

            <TextView
                android:id="@+id/workinginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorSpecialties"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="Working in"
                android:textColor="#666666"
                android:textSize="11.5sp">

            </TextView>

            <TextView
                android:id="@+id/currentlyWorking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workinginText"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="Doctor's Point Hospital"
                android:textColor="@color/black"
                android:textSize="12.5sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/availableforText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentlyWorking"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/profilePictureCard"
                android:fontFamily="@font/roboto"
                android:text="Available for"
                android:textColor="#666666"
                android:textSize="11.5sp">

            </TextView>

            <TextView
                android:id="@+id/availableforText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availableforText"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/profilePictureCard"
                android:fontFamily="@font/rubik"
                android:text="Instant Video Call"
                android:textColor="@color/green_shade_1"
                android:textSize="13sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingStar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar"
                android:layout_marginBottom="5dp"
                android:background="#ffff">

                <TextView
                    android:id="@+id/amounticon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/rubik"
                    android:text="\u09F3"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/amounticon"
                    android:fontFamily="@font/rubik"
                    android:text="210"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amountDescription"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/amount"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="textStart"
                    android:text="(Incl. VAT) per consultation)"
                    android:textSize="13sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentlyWorkingCard"
                    style="@style/Widget.Material3.CardView.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#C2C2C2"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/videoCallIcon"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/videocall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="3sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@id/videoCallIcon"
                            android:fontFamily="@font/roboto"
                            android:padding="6dp"
                            android:text="@string/instantVideoCall"
                            android:textColor="#4F5FDE"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>