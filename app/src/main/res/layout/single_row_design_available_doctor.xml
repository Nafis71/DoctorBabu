<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="25dp"
                app:cardBackgroundColor="@color/green_shade_1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="-40dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="14dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onlineStatus"
                    android:textColor="@color/white"
                    android:fontFamily="@font/overpass_semibold"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="2.8dp"
                    android:textSize="12sp"
                    >

                </TextView>

            </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_picture"
            android:scaleType="centerCrop"
            android:id="@+id/profilePicture"
            app:layout_constraintDimensionRatio="1:1"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            >

        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tonmoy"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/profilePicture"
            android:layout_alignParentTop="true"
            >

        </TextView>
        <TextView
            android:id="@+id/doctorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="left"
            android:text="Medical officer"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_below="@+id/doctorName"
            android:layout_toEndOf="@+id/profilePicture"
            >

        </TextView>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id = "@+id/ratingStar"
            android:src = "@drawable/star"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/profilePicture"
            android:layout_below="@+id/doctorType"
            >
        </ImageView> <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ratingStar"
            android:layout_marginStart="3dp"
            android:text=""
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:textColor="#666666"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_below="@+id/doctorType"
            >

        </TextView>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:id = "@+id/jobbag"
                android:src = "@drawable/jobbag"
                android:layout_toEndOf="@+id/rating"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/doctorType"
                >
            </ImageView>
            <TextView
                android:id="@+id/jobexperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/jobbag"
                android:layout_marginStart="3dp"
                android:text="5+ years experience"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_below="@+id/doctorType"

                >

            </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/doted"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profilePicture"

            >

        </View>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>