<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoctorBabu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4F5FDE</item>
        <item name="colorPrimaryVariant">#432E2F30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4F5FDE</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#4F5FDE</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Bottom Sheet Styles. -->
    <style name="bottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Bottom Sheet Styles. -->
    <style name="Theme.DoctorBabu" parent="Base.Theme.DoctorBabu" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#E5E7E9</item>
        <item name="colorControlActivated">#FFD700</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>